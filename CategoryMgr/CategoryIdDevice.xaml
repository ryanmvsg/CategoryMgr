<UserControl x:Class="CategoryMgr.CategoryIdDevice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="485">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="445*" />
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="xIsEnabledChk" IsChecked="False" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <TextBlock x:Name="xCategoryTxtBlk" VerticalAlignment="Center" Margin="3,0,3,0" Grid.Column="1" Text="&lt; Category Name Here >" />
    </Grid>
</UserControl>
